= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :player_us_id
    = f.number_field :player_us_id
  .field
    = f.label :player_ussr_id
    = f.number_field :player_ussr_id
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
